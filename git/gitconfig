[user]
	name = Michal Orman
	email = michal.orman@gmail.com
[branch]
	autosetupmerge = true
[core]
	autocrlf = input
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
	whitespace = red reverse
[color "status"]
	added = green
	changed = red
	untracked = yellow
[alias]
	st = status -sb
	ci = commit
	br = branch
	co = checkout
	df = diff
	d = diff
	dc = diff --cached
	l = log --graph --decorate --oneline
	ls = ls-files
  undo = reset --soft HEAD^
  a = add -A
  bs = branches

	#Show files ignored by git:
	ign = ls-files -o -i --exclude-standard
[merge "gemfilelock"]
  name = Relocks the Gemfile.lock
  driver = bundle install
[push]
	default = simple
[pull]
	rebase = true
[init]
	defaultBranch = main
