configuration {
	font:                 "JetBrains Mono Nerd Font 14";
  show-icons:           false;
	icon-theme: 					"Papirus";
  display-drun: 				"הּ";
  display-run:  				"הּ";
  drun-display-format:  "{name}";
  //disable-history:      false;
	//sidebar-mode:         false;
}

@import "colors.rasi"

window {
  transparency:       "real";
  background-color:   @bg;
  text-color:         @fg;
	border:							3px;
	border-color:       @altblue;
  //border-radius:      8px;
	width:              500px;
  padding:            10px;
  //location:           center;
  //x-offset:           0;
  //y-offset:           0;
}

prompt {
  enabled: 						true;
	padding: 						14px 0px 14px 14px;
	background-color:   @bg;
	text-color: 				@black;
	font:							  "JetBrains Mono Nerd Font 16";
}

entry {
  background-color:               @bg;
  text-color:                     @fg;
  placeholder-color:              @altblack;
  expand:                         true;
  horizontal-align:               0;
  placeholder:                    " Search...";
  padding: 						            15px 0px 0px 15px;
  blink:                          true;
}

inputbar {
	children: 						          [ prompt, entry ];
  background-color:               @bg;
  text-color:                     @altblack;
  expand:                         false;
	border:							            0px;
  border-radius:                  0px;
  spacing:                        0px;
}

listview {
  background-color:               @bg;
  padding:                        10px 10px 10px 10px;
  columns:                        1;
  lines:                          8;
  spacing:                        4px;
  cycle:                          true;
  dynamic:                        true;
  layout:                         vertical;
}

mainbox {
  background-color:               @bg;
	border:							            0px;
  border-radius:                  0px;
  children:                       [ inputbar, listview ];
  spacing:                       	0px;
  padding:                        0px;
}

element {
  background-color:               @bg;
  text-color:                     @fg;
  orientation:                    horizontal;
  border-radius:                  0px;
	padding: 						            8px 8px 8px 20px;
}

element-icon {
  size:                           24px;
  border:                         0px;
  background-color:               @transparent;
  text-color:                     @fg;
}

element-text {
  expand:                         true;
  horizontal-align:               0;
  vertical-align:                 0.5;
  margin:                         0px 2.5px 0px 2.5px;
  background-color:               @transparent;
  text-color:                     @fg;
}

element selected {
  background-color:               @altbg;
  text-color:                     @fg;
	//border:							            0 1px 0 1px;
  //border-radius:                  5px;
  //border-color:                  	@blue;
}
